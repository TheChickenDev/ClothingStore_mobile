<?xml version="1.0" encoding="utf-8"?>
<shape
    android:shape="rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Thiết lập màu nền cho button (nếu cần) -->
    <size android:width="200dp"
        android:height="50dp"/>

    <solid android:color="@android:color/transparent"/>
        <gradient android:startColor="#139718"
            android:endColor="#00BCD4"/>
    <!-- Thiết lập border cho button -->
    <stroke android:color="#FF0000"
        android:width="4dp"/> <!-- Độ dày của border -->

    <!-- Thiết lập góc bo cho button (nếu cần) -->
    <corners android:radius="4dp" /> <!-- Bán kính của góc bo -->

</shape>